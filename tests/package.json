{
  "name": "peterhollmer-website-tests",
  "version": "1.0.0",
  "description": "Test suite for PeterHollmer.com website",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage --coverageReporters=json --coverageReporters=html --coverageReporters=text",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:html": "html-validate ../src/*.html --formatter text",
    "test:css": "stylelint '../src/*.html' --custom-formatter stylelint-formatter-pretty",
    "test:css:ci": "stylelint '../src/*.html' --custom-formatter stylelint-actions-formatters",
    "test:accessibility": "node --experimental-vm-modules node_modules/.bin/jest --testPathPatterns=accessibility --coverage --coverageReporters=json --coverageReporters=html",
    "test:performance": "node --experimental-vm-modules node_modules/.bin/jest --testPathPatterns=performance --coverage --coverageReporters=json --coverageReporters=html",
    "test:cross-browser": "playwright test",
    "test:all": "npm run test:html && npm run test:css && npm run test && npm run test:cross-browser",
    "test:all:ci": "npm run test:html && npm run test:css:ci && npm run test && npm run test:cross-browser",
    "install-browsers": "playwright install"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.40.0",
    "axe-core": "^4.10.3",
    "html-validate": "^9.7.1",
    "jest": "^30.0.4",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.4",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.7.1",
    "stylelint": "^16.21.1",
    "stylelint-actions-formatters": "^16.3.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-formatter-pretty": "^4.0.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/setup.cjs"
    ],
    "testMatch": [
      "<rootDir>/**/*.test.js",
      "<rootDir>/**/*.test.cjs"
    ],
    "collectCoverageFrom": [
      "../src/*.html",
      "!node_modules/**"
    ],
    "coverageDirectory": "../reports/coverage",
    "coverageReporters": [
      "json",
      "html",
      "text"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-html"
    ],
    "rules": {
      "no-descending-specificity": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "media-feature-range-notation": "context"
    }
  }
}
