{
  "name": "peterhollmer-website-tests",
  "version": "1.0.0",
  "description": "Test suite for PeterHollmer.com website",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:html": "html-validate *.html",
    "test:css": "stylelint '*.html'",
    "test:accessibility": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=accessibility",
    "test:performance": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=performance",
    "test:cross-browser": "playwright test",
    "test:all": "npm run test:html && npm run test:css && npm run test && npm run test:cross-browser",
    "install-browsers": "playwright install"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.40.0",
    "axe-core": "^4.10.3",
    "html-validate": "^8.8.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.0",
    "lighthouse": "^11.4.0",
    "stylelint": "^15.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.cjs"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.test.cjs"
    ],
    "collectCoverageFrom": [
      "*.html",
      "!node_modules/**"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-html"
    ],
    "rules": {
      "no-descending-specificity": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  }
}
