{
  "name": "peterhollmer-website-tests",
  "version": "1.0.0",
  "description": "Test suite for PeterHollmer.com website",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage --coverageReporters=json --coverageReporters=html --coverageReporters=text",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:html": "html-validate *.html --formatter json=html-validate-report.json",
    "test:css": "stylelint '*.html' --formatter json --output-file stylelint-report.json",
    "test:accessibility": "node --experimental-vm-modules node_modules/.bin/jest --testPathPatterns=accessibility --coverage --coverageReporters=json --coverageReporters=html",
    "test:performance": "node --experimental-vm-modules node_modules/.bin/jest --testPathPatterns=performance --coverage --coverageReporters=json --coverageReporters=html",
    "test:cross-browser": "playwright test --reporter=html",
    "test:all": "npm run test:html && npm run test:css && npm run test && npm run test:cross-browser",
    "install-browsers": "playwright install"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.40.0",
    "axe-core": "^4.10.3",
    "html-validate": "^9.7.1",
    "jest": "^30.0.4",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.4",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.7.1",
    "stylelint": "^15.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.cjs"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.test.cjs"
    ],
    "collectCoverageFrom": [
      "*.html",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "html",
      "text"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-html"
    ],
    "rules": {
      "no-descending-specificity": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  }
}
