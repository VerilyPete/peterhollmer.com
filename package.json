{
  "name": "peterhollmer-website-tests",
  "version": "1.0.0",
  "description": "Test suite for PeterHollmer.com website",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:html": "html-validate *.html",
    "test:css": "stylelint '*.html'",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:performance": "jest --testPathPattern=performance",
    "test:cross-browser": "playwright test",
    "test:all": "npm run test:html && npm run test:css && npm run test && npm run test:cross-browser",
    "install-browsers": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-axe": "^8.0.0",
    "html-validate": "^8.8.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-html": "^1.1.0",
    "axe-core": "^4.8.0",
    "lighthouse": "^11.4.0",
    "jsdom": "^23.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.html",
      "!node_modules/**"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-html"
    ],
    "rules": {
      "no-descending-specificity": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": ["global"]
        }
      ]
    }
  }
} 